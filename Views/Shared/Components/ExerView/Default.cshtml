@using final.Models;
@using final.Utilities;
@model IList<tblExer>

<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>BTH</h2>
        <p>Do following Exercise then nop for me.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">
            @foreach (var item in Model)
            {
                string url = Functions.TitleSlugGeneration("exer", @item.ExerName, @item.ExerId);
                <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="100">
                    <div class="icon flex-shrink-0"><i class="bi bi-journal-code"></i></div>
                    <div>
                        <h4 class="title"><a href="/@url" class="stretched-link" style="font-family: Arial, Helvetica, sans-serif;">@item.ExerName</a></h4>
                        <p class="description">@item.Contents</p>
                    </div>
                </div>
            }
            <!-- End Service Item -->
        </div>

    </div>

</section><!-- /Services Section -->