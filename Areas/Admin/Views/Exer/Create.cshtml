@model final.Models.tblExer
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Add an Exercise.</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>Exercise Name</label>
                    <input type="text" class="form-control" asp-for="ExerName" placeholder="ExerName...">
                    <span asp-asp-validation-for="ExerName" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Contents</label>
                    <input type="text" class="form-control" asp-for="Contents">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Create Date</label>
                    <input type="date" class="form-control" asp-for="CreateAt">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Deadline</label>
                    <input type="date" class="form-control" asp-for="Deadline">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Visiible</label>
                    <select asp-for="IsActive" class="form-select" id="IsActice">
                        <option value="True">Active</option>
                        <option value="False">InActive</option>
                    </select>
                </div>
            </div>
            <a asp-asp-controller="Exer" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Go back
            </a>
            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Save information
            </button>
        </form>
    </div>
</main>