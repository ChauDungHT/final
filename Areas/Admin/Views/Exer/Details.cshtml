@model final.Models.tblExer
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Exercise Details.</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6"></div>
            <label asp-for="ExerName">ExerName</label>
            <input type="text" class="form-control mb-3" asp-for="ExerName" disabled/>
        </div>             
        <div class="form-group col-md-6"></div>
            <label asp-for="Contents">Content</label>
            <input type="text" class="form-control mb-3" asp-for="Contents" disabled/>
        </div>             
        <div class="form-group col-md-6"></div>
            <label asp-for="CreateAt">Create Date</label>
            <input type="text" class="form-control mb-3" asp-for="CreateAt" disabled/>
        </div>             
        <div class="form-group col-md-6"></div>
            <label asp-for="Deadline">Deadline</label>
            <input type="text" class="form-control mb-3" asp-for="Deadline" disabled/>
        </div>             
        <div class="form-group col-md-6"></div>
            <label asp-for="IsActive">IsActive</label>
            <input type="text" class="form-control mb-3" asp-for="IsActive" disabled/>
        </div>   
        <form>
            <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                <i class="bi bi-arrow-left-circle"></i> Go back
            </a>
        </form>        
    </div>
</main>
